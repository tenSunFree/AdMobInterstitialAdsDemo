<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#b9e5f3"
                android:endColor="#b9e5f3"
                android:startColor="#b9e5f3"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#53c0f0"/>
            <corners
                android:radius="2dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#b9e5f3"
                android:endColor="#b9e5f3"
                android:startColor="#b9e5f3"
                android:type="linear"/>
            <stroke
                android:width="2dp"
                android:color="#53c0f0"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#7053c0f0"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#e0b9e5f3"
                android:endColor="#70b9e5f3"
                android:startColor="#70b9e5f3"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>
</selector>